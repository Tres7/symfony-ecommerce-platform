<header class="p-3 text-bg-dark">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">

            <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                {% if not app.user or (is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN')) %}
                    <li>
                        <a href="{{ path('home') }}" class="nav-link {% if app.request.get('_route') == 'home' %}text-secondary{% else %}text-white{% endif %}">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#home"/></svg>
                            {{ 'header.home'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('add_credit_card') }}" class="nav-link {% if app.request.get('_route') == 'credit_card_add' %}text-secondary{% else %}text-white{% endif %}">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#credit-card"/></svg>
                            {{ 'header.add_credit_card'|trans }}
                        </a>
                    </li>
                {% endif %}
                <li>
                    <a href="{{ path('dashboard_redirect') }}" class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}text-secondary{% else %}text-white{% endif %}">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#speedometer2"/></svg>
                        {{ 'header.dashboard'|trans }}
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('admin_products') }}" class="nav-link {% if app.request.get('_route') == 'admin_products' %}text-secondary{% else %}text-white{% endif %}">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#table"/></svg>
                            {{ 'header.products_list'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_users') }}" class="nav-link {% if app.request.get('_route') == 'admin_users' %}text-secondary{% else %}text-white{% endif %}">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#people-circle"/></svg>
                            {{ 'header.users_list'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_orders') }}" class="nav-link {% if app.request.get('_route') == 'admin_orders' %}text-secondary{% else %}text-white{% endif %}">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#orders-list"/></svg>
                            {{ 'header.orders_list'|trans }}
                        </a>
                    </li>
                {% endif %}
            </ul>

            <div class="text-end">
                {% if app.user %}
                    <div class="dropdown">
                        <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="dropdownUserMenu" data-bs-toggle="dropdown" style="border: none" aria-expanded="false">
                            <svg class="bi" width="24" height="24"><use xlink:href="#people-circle"/></svg>
                            {{ app.user.firstName }} {{ app.user.lastName }}
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUserMenu">
                            <li>
                                <a class="dropdown-item" href="{{ path('logout') }}">
                                    {{ 'header.logout'|trans }}
                                </a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    <a href="{{ path('login') }}">
                        <button type="button" class="btn btn-outline-light me-2">
                            <svg class="bi" width="16" height="16"><use xlink:href="#box-arrow-in-right"/></svg> {{ 'header.login'|trans }}
                        </button>
                    </a>
                    <a href="{{ path('register') }}">
                        <button type="button" class="btn btn-primary">
                            <svg class="bi" width="16" height="25"><use xlink:href="#person-plus"/></svg> {{ 'header.register'|trans }}
                        </button>
                    </a>
                {% endif %}
            </div>
            {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                <a href="{{ path('cart_show') }}" class="nav-link">
                    <svg class="bi" width="25" height="25">
                        <use xlink:href="#cart"></use>
                    </svg>
                    <span id="cart-count" class="badge bg-danger">{{ totalItems|default(0) }}</span>
                </a>
            {% endif %}
        </div>
    </div>
</header>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
