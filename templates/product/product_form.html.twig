{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">{{ product is defined ? 'Modifier le produit' : 'Ajouter un nouveau produit' }}</h2>
            </div>
            <div class="card-body">
                {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

                <div class="row g-3">
                    <!-- Nom du produit -->
                    <div class="col-md-6">
                        <label for="product_name" class="form-label">Nom du produit</label>
                        <div class="input-group">
                        <span class="input-group-text bg-light">
                            <svg class="bi" width="16" height="16" fill="currentColor">
                                <use xlink:href="#box-arrow-in-right"></use>
                            </svg>
                        </span>
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'id': 'product_name'} }) }}
                        </div>
                    </div>

                    <!-- Prix -->
                    <div class="col-md-6">
                        <label for="product_price" class="form-label">Prix</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">€</span>
                            {{ form_widget(form.price, { 'attr': {'class': 'form-control', 'id': 'product_price'} }) }}
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <!-- Description -->
                    <div class="col-12">
                        <label for="product_description" class="form-label">Description</label>
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'rows': 4, 'id': 'product_description'} }) }}
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <!-- Stock -->
                    <div class="col-md-6">
                        <label for="product_stock" class="form-label">Quantité en stock</label>
                        {{ form_widget(form.stock, { 'attr': {'class': 'form-control', 'id': 'product_stock'} }) }}
                    </div>

                    <!-- Statut -->
                    <div class="col-md-6">
                        <label for="product_status" class="form-label">Statut du produit</label>
                        {{ form_widget(form.status, { 'attr': {'class': 'form-select', 'id': 'product_status'} }) }}
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <!-- Catégorie -->
                    <div class="col-md-6">
                        <label for="product_category" class="form-label">Catégorie</label>
                        {{ form_widget(form.category, { 'attr': {'class': 'form-select', 'id': 'product_category'} }) }}
                    </div>

                    <!-- Image -->
                    <div class="col-md-6">
                        <label for="product_image" class="form-label">Image du produit</label>
                        {{ form_widget(form.images, { 'attr': {'class': 'form-control', 'id': 'product_image','style': 'max-width: 400px;'
                        } }) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('admin_products') }}" class="btn btn-secondary">
                        <svg class="bi me-1" width="16" height="16" fill="currentColor">
                            <use xlink:href="#arrow-left"></use>
                        </svg>
                        Retour à la liste
                    </a>
                    <button class="btn btn-primary">
                        <svg class="bi me-1" width="16" height="16" fill="currentColor">
                            <use xlink:href="#check2-circle"></use>
                        </svg>
                        {{ product is defined ? 'Mettre à jour' : 'Créer' }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
