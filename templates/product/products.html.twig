{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>
    <a href="{{ path('product_new') }}" class="btn btn-primary">Ajouter un produit</a>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Catégorie</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} €</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.category.name }} ({{ product.category.id }})</td>
                <td>
                    {% for image in product.images %}
                        <img src="{{ asset('uploads/images/' ~ image.url) }}" alt="Image de {{ product.name }}" width="50" class="img-thumbnail mb-2">
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
{#                    <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>#}
                    <form action="{{ path('product_delete', {'id': product.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container my-4">
        {% include 'partials/flash.html.twig' %}
    </div>

    {{ knp_pagination_render(products) }}
{% endblock %}
