<div {{ attributes }}>
        {{ form_start(form) }}
        <div id="credit-card-forms">
                {% for key, creditCardForm in form.creditCards %}
                        <div class="credit-card-form mb-4 border p-3 rounded shadow-sm">
                                <div class="row g-3">
                                        <div class="col-md-6">
                                                {{ form_label(creditCardForm.number, 'credit_card_form.number'|trans, {'class': 'form-label'}) }}
                                                {{ form_widget(creditCardForm.number, {'attr': {'class': 'form-control'}}) }}
                                                <div class="text-danger small">
                                                        {{ form_errors(creditCardForm.number) }}
                                                </div>
                                        </div>
                                        <div class="col-md-3">
                                                {{ form_label(creditCardForm.expirationDate, 'credit_card_form.expiration_date'|trans, {'class': 'form-label'}) }}
                                                {{ form_widget(creditCardForm.expirationDate, {'attr': {'class': 'form-control'}}) }}
                                                <div class="text-danger small">
                                                        {{ form_errors(creditCardForm.expirationDate) }}
                                                </div>
                                        </div>
                                        <div class="col-md-3">
                                                {{ form_label(creditCardForm.cvv, 'credit_card_form.cvv'|trans, {'class': 'form-label'}) }}
                                                {{ form_widget(creditCardForm.cvv, {'attr': {'class': 'form-control'}}) }}
                                                <div class="text-danger small">
                                                        {{ form_errors(creditCardForm.cvv) }}
                                                </div>
                                        </div>
                                </div>
                                <button class="btn btn-danger btn-sm mt-3" data-action="live#action" data-live-action-param="removeCreditCard" data-live-index-param="{{ key }}" type="button">
                                        {{ 'credit_card_form.remove'|trans }}
                                </button>
                        </div>
                {% endfor %}
        </div>

        <div class="d-flex justify-content-between mt-4">
                <button class="btn btn-secondary btn-sm" data-action="live#action" data-live-action-param="addCreditCard" type="button">
                        {{ 'credit_card_form.add'|trans }}
                </button>
                <button data-action="live#action" data-live-action-param="save" type="button" class="btn btn-primary">
                        {{ 'credit_card_form.submit'|trans }}
                </button>
        </div>
        {{ form_end(form) }}
</div>
