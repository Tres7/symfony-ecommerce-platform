{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <section class="mb-4">
            <h2>Mes commandes</h2>
            {% if clientOrders is not empty %}
                <ul class="list-group">
                    {% for order in clientOrders %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Commande #{{ order.id }}</strong> <br>
                                Date : {{ order.createdAt|date('d/m/Y') }} <br>
                                Statut : <span class="badge bg-secondary">{{ order.status.value }}</span>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted">Vous n'avez pas encore passé de commandes.</p>
            {% endif %}
        </section>


        <section>
            <h2>Accès rapide</h2>
            <a href="{{ path('home') }}" class="btn btn-primary">Voir les produits</a>
            <a href="{{ path('cart_show') }}" class="btn btn-outline-primary">Mon panier</a>
        </section>
    </div>
{% endblock %}
